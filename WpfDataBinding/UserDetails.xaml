<Window x:Class="WpfDataBinding.UserDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDataBinding"
        mc:Ignorable="d"
        Title="UserDetails" Height="300" Width="600">
    <StackPanel>
        <TextBox Margin="10" Name="FirstName" Text="{Binding FirstName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" ></TextBox>
        <TextBox Margin="10" Name="LastName" Text="{Binding LastName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <TextBox Margin="10" Name="Pesel" Text="{Binding Pesel, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
    </StackPanel>
</Window>
